<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/zero_margin"
    android:paddingLeft="@dimen/zero_margin"
    android:paddingRight="@dimen/zero_margin"
    android:paddingTop="@dimen/zero_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.terra.learnthroughgame.EconAssignmentActivity"
    tools:showIn="@layout/activity_econ_assignment">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LinearLayoutBar"
            android:columnCount="2"
            android:rowCount="3"
            >

            <TextView
                android:id="@+id/textView_EconBar"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:gravity="center"
                android:background="@color/gray_dark"
                android:text="@string/titleBarEconPart1"
                />

            <TextView
                android:id="@+id/textView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titleAssignmentDiscounting"
                style="@style/styleTitle"
                android:layout_column="1"
                android:layout_row="0"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:layout_marginRight="50dp"
            />

            <TextView
                android:id="@+id/textViewMainContentObjective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titleBarEconCh1Objective"
                style="@style/styleContent"
                android:layout_column="1"
                android:layout_row="1"
                android:paddingTop="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="10dp"
                android:layout_marginRight="50dp"
                />

            <utils.DrawingView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="150dp"
                android:id="@+id/DrawingViewBlackboard"
                android:background="@color/blue"
                android:layout_column="1"
                android:layout_row="2"
                />

        </GridLayout>

</RelativeLayout>
