<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/zero_margin"
    android:paddingRight="@dimen/zero_margin"
    android:paddingTop="@dimen/zero_margin"
    android:paddingBottom="@dimen/zero_margin"
    tools:context="com.example.terra.learnthroughgame.EconLessonActivity"
    tools:showIn="@layout/activity_econ_lesson">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutEconBar"
        >

        <TextView
            android:id="@+id/textView_EconBar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:gravity="center"
            android:background="@color/gray_dark"
            android:text="@string/titleBarEconPart1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconCh1"
        style="@style/styleTitle"
        android:id="@+id/textView_Title"
        android:paddingTop="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="10dp"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconCh1Objective"
        style="@style/styleContent"
        android:id="@+id/textViewMainContentObjective"
        android:layout_below="@+id/textView_Title"
        android:paddingTop="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconCh1Content"
        style="@style/styleContent"
        android:id="@+id/textView_Main_EconContent"
        android:layout_below="@+id/textViewMainContentObjective"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconCh1ContentDescription"
        style="@style/styleContent"
        android:id="@+id/textView_Main_EconContentDescription"
        android:layout_below="@+id/textView_Main_EconContent"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="10dp"
        />

</RelativeLayout>
