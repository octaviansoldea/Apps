<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/zero_margin"
    android:paddingRight="@dimen/zero_margin"
    android:paddingTop="@dimen/zero_margin"
    android:paddingBottom="@dimen/zero_margin"
    tools:context=".EconFinLessonActivity"
    tools:showIn="@layout/activity_econfin_lesson">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutEconFinBar"
        >

        <TextView
            android:id="@+id/textView_EconFinBar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:gravity="center"
            android:background="@color/gray_dark"
            android:text="@string/titleBarEconFinPart1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconFinCh1"
        style="@style/styleTitle"
        android:id="@+id/textView_Title"
        android:paddingTop="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="10dp"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconFinCh1Objective"
        style="@style/styleContent"
        android:id="@+id/textViewMainContentObjective"
        android:layout_below="@+id/textView_Title"
        android:paddingTop="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconFinCh1Content"
        style="@style/styleContent"
        android:id="@+id/textView_Main_EconFinContent"
        android:layout_below="@+id/textViewMainContentObjective"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleBarEconFinCh1ContentDescription"
        style="@style/styleContent"
        android:id="@+id/textView_Main_EconFinContentDescription"
        android:layout_below="@+id/textView_Main_EconFinContent"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="10dp"
        />

    <Button
        android:layout_width="@dimen/button_height_short"
        android:layout_height="@dimen/button_height_short"
        android:background="@drawable/arrow_right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/buttonEconFinForward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
