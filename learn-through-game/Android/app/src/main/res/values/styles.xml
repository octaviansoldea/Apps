<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mainTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#008</item>
        <item name="android:layout_row">1</item>
        <item name="android:layout_column">1</item>
    </style>

    <style name="styleButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#A30020</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="applicationSelectionBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:columnCount">2</item>
        <item name="android:rowCount">2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="textRotate">
        <item name="android:rotation">90</item>
    </style>

</resources>
