<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
        <!-- Customize your theme here. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#008</item>
        <item name="android:layout_row">0</item>
        <item name="android:layout_column">1</item>
    </style>

    <style name="styleButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#A30020</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
